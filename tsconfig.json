{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "rootDir": "src/",
        "outDir": "dist",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "src/playground/**/*"
    ]
}